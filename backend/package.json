{
  "name": "express-backend-starter",
  "version": "1.0.0",
  "description": "NodeJS / ExpressJS backend project starter",
  "main": "bin/www",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "per-env",
    "start:development": "nodemon --trace-warnings -r dotenv/config ./bin/www",
    "start:production": "node ./bin/www",
    "init": "npx dotenv sequelize-cli db:create",
    "deinit": "npx dotenv sequelize-cli db:drop",
    "build": "webpack --config webpack.config.js --mode production"
  },
  "author": "JM Alan",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express-async-handler": "^1.2.0",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "per-env": "^1.0.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "devDependencies": {
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.1",
    "nodemon": "^2.0.19"
  }
}
